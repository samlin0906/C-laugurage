//質數

#include <stdio.h>
int main(){
    int number, prime;
    char string;
    printf("Pls enter number:");
    scanf("%d", &number);
    if(number == 1){
        printf("This is composite.");
    } else if(number > 1){
        for(prime = 2; prime <= number; prime = prime + 1){
            if(number % prime == 0 && prime != number){
                printf("This is composite.");
                break;
            } else if(number % prime == 0 && prime == number){
                printf("This is prime.");
    }
        }
    } else if(number < 0 && number == string){
        printf("Pls enter positive number.");
    }
    return 0;
}



//繪製三角形,偏右
//解法一

#include <stdio.h>
int main(){
    int number, i, j, k;
    printf("Pls enter number:");
    scanf("%d", &number);
    for (i = 1; i <= number; i ++){
        for (j = 1; j <= number- i; j ++){             // 先將空填滿
            printf(" ");
        }
        for (k = 1; k <= i; k ++){
            printf("*");
        }
        printf("\n");
    }
    return 0;
    
//繪製三角形,偏右   
//解法二
//座標法

#include <stdio.h>
int main(){
    int number, i, j, k;
    printf("Pls enter number:");
    scanf("%d", &number);
    for (i = 1; i <= number; i ++){
        for (j = 1; j <= number; j ++){           #先假設畫滿長方形
            if ( i + j >= number + 1){            #斜線座標和等於number + 1(e.g. (1,5)(2, 4)), 斜線座標以下之和大於number + 1 
                printf("*");
        } else{
                printf(" ");
            }
        }
        printf("\n");
    }
    return 0;
}

//009 Palindrome Number
//回文數

bool isPalindrome(int x){
    if (x < 0) 
        return false;
    long int temp = x, total = 0;                            // 需設long int
    while (temp != 0) {
        total = total * 10 + temp % 10;
        temp = temp / 10;
    }
    if (total == x)                                         // 需等於x 非 temp
        return true;
    return false;
}



//費氏數列 || 費波那契數列
#include <stdio.h>
int s(int);

int main(){
    int number;
    printf("Pls enter number:");
    scanf("%d", &number);
    printf("%d", s(number));
    return 0;
}

int s(int number){
    if (number <= 2){
        return number;
    }
    return s(number - 1) + s(number - 2);
}

//070 Climbing Stairs
//費氏數列 || 費波那契數列

int climbStairs(int n){

    int i, temp,step_1 = 0, step_2 = 1;

    for (i = 1; i <= n; i ++) {                          // n >= 1, 因此i = 1; if n = 1, output = 1
        temp = step_2;
        step_2 = step_1 + step_2;
        step_1 = temp;
    }
    return step_2;
}
